        let currentQuestionIndex = 0;
        let score = 0;
        let selectedOption = null;

        const questionArea = document.getElementById('question-area');
        const nextBtn = document.getElementById('next-btn');
        const progressText = document.getElementById('progress-text');

        const quizContainer = document.getElementById('quiz-container');
        const resultContainer = document.getElementById('result-container');
        const scoreEl = document.getElementById('score');
        const totalQuestionsEl = document.getElementById('total-questions');
        const resultTitleEl = document.getElementById('result-title');
        const resultContentEl = document.getElementById('result-content');
        const restartBtn = document.getElementById('restart-btn');

        function startQuiz() {
            currentQuestionIndex = 0;
            score = 0;
            quizContainer.classList.remove('hidden');
            resultContainer.classList.add('hidden');
            nextBtn.textContent = 'Проверить';
            nextBtn.disabled = true;
            showQuestion();
        }

        function showQuestion() {
            selectedOption = null;
            const currentQuestion = quizData[currentQuestionIndex];
            questionArea.innerHTML = `
                <div class="space-y-4">
                    <div class="mb-4">
                        <p class="text-lg font-semibold text-slate-700">${currentQuestion.question}</p>
                    </div>
                    <div class="space-y-3">
                        ${currentQuestion.options.map((option, index) => `
                            <button class="quiz-option w-full text-left p-4 rounded-lg border-2 border-slate-200 hover:bg-slate-100 hover:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition-colors" data-option="${option}">
                                <span class="font-mono mr-2">${String.fromCharCode(65 + index)}.</span> ${option}
                            </button>
                        `).join('')}
                    </div>
                </div>
                <div id="explanation-area" class="mt-4 p-4 rounded-lg bg-slate-50 hidden"></div>
            `;

            document.querySelectorAll('.quiz-option').forEach(button => {
                button.addEventListener('click', () => {
                    if (button.parentElement.querySelector('.selected')) {
                        return; // Блокируем выбор после первого клика
                    }
                    document.querySelectorAll('.quiz-option').forEach(btn => btn.classList.remove('selected'));
                    button.classList.add('selected');
                    selectedOption = button.dataset.option;
                    nextBtn.disabled = false;
                });
            });

            progressText.textContent = `Вопрос ${currentQuestionIndex + 1} из ${quizData.length}`;
            nextBtn.disabled = true;
        }

        function showResults() {
            quizContainer.classList.add('hidden');
            resultContainer.classList.remove('hidden');
            scoreEl.textContent = score;
            totalQuestionsEl.textContent = quizData.length;

            let resultKey;
            if (score >= 18) {
                resultKey = 'expert';
            } else if (score >= 14) {
                resultKey = 'practitioner';
            } else if (score >= 10) {
                resultKey = 'middle';
            } else {
                resultKey = 'beginner';
            }
            
            const resultData = resultInterpretations[resultKey];
            resultTitleEl.textContent = resultData.title;
            resultContentEl.innerHTML = resultData.content;
        }

        nextBtn.addEventListener('click', () => {
            if (nextBtn.textContent === 'Проверить') {
                checkAnswer();
            } else {
                goToNextQuestion();
            }
        });
        
        function checkAnswer() {
             if (!selectedOption) return;

            const isCorrect = selectedOption === quizData[currentQuestionIndex].answer;
            if (isCorrect) {
                score++;
            }
            
            const optionButtons = document.querySelectorAll('.quiz-option');
            optionButtons.forEach(button => {
                button.disabled = true;
                const optionText = button.dataset.option;

                if (optionText === quizData[currentQuestionIndex].answer) {
                    button.classList.add('correct');
                }

                if (optionText === selectedOption && !isCorrect) {
                    button.classList.add('incorrect');
                }
            });
            
            const explanationText = quizData[currentQuestionIndex].explanation;
            const explanationArea = document.getElementById('explanation-area');
            if (explanationText && explanationArea) {
                explanationArea.innerHTML = `<p><span class="font-bold">${isCorrect ? 'Правильно!' : 'Неверно.'}</span> ${explanationText}</p>`;
                explanationArea.classList.remove('hidden');
                explanationArea.classList.add(isCorrect ? 'correct-explanation' : 'incorrect-explanation');
            }

            if (currentQuestionIndex === quizData.length - 1) {
                nextBtn.textContent = 'Завершить тест';
            } else {
                 nextBtn.textContent = 'Следующий';
            }
            nextBtn.disabled = false;
        }

        function goToNextQuestion() {
            currentQuestionIndex++;
            if (currentQuestionIndex < quizData.length) {
                showQuestion();
                nextBtn.textContent = 'Проверить';
                nextBtn.disabled = true;
            } else {
                showResults();
            }
        }

        restartBtn.addEventListener('click', startQuiz);

        // Initial start
        startQuiz();
    </script>
</body>
</html>

